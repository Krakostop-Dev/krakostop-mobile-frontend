{
  "expo": {
    "name": "Krakostop mobile frontend",
    "slug": "krakostop-mobile-frontend",
    "privacy": "public",
    "sdkVersion": "36.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "eu.krakostop.krakostopapp"
    },
    "ios": {
      "supportsTablet": true,
      "buildNumber": "1",
      "bundleIdentifier": "eu.krakostop.krakostopapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses yours location to share share it with other users",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses yours location to share share it with other users",
        "NSLocationAlwaysUsageDescription": "This app uses yours location to share share it with other users",
        "UIBackgroundModes": [
          "fetch",
          "location"
        ]
      }
    },
    "packagerOpts": {
      "sourceExts": [
        "js",
        "json",
        "ts",
        "tsx",
        "jsx"
      ]
    }
  }
}
